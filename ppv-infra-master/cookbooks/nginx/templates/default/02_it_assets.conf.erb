location = <%= @url_context %>/action-workflow {
  rewrite ^ <%= @url_context %>/action-workflow/ permanent;
}

location = <%= @url_context %>/action-workflow/ {
  default_type "text/html";
  alias /opt/periscope/impact-tracker-web/public/;
  index index.html
  expires 0;
}

location ~ ^<%= @url_context %>/action-workflow/(.+)$ {
  alias /opt/periscope/impact-tracker-web/public/$1;
  expires 0;
}
